import { Button } from "@/components/ui/button";
import { MessageCircle, CheckCircle } from "lucide-react";
import { useState } from "react";

export default function Home() {
  const [userName, setUserName] = useState<string | null>(null);
  const [showWelcome, setShowWelcome] = useState(false);

  const handleStartInteraction = () => {
    // Passo 1: Usar prompt para obter o nome do usuário
    const name = prompt("Qual é o seu nome?");
    
    if (name && name.trim()) {
      setUserName(name);
      
      // Passo 2: Usar confirm para perguntar se quer ver mensagem especial
      const wantsMessage = confirm(
        `Olá ${name}! Você gostaria de ver uma mensagem especial?`
      );
      
      if (wantsMessage) {
        // Passo 3: Exibir alert com mensagem personalizada
        alert(`Bem-vindo, ${name}!`);
        setShowWelcome(true);
      }
    }
  };

  return (
    <div className="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100 flex items-center justify-center p-4">
      <div className="bg-white rounded-lg shadow-2xl p-8 max-w-md w-full">
        <div className="text-center mb-8">
          <MessageCircle className="w-16 h-16 mx-auto text-indigo-600 mb-4" />
          <h1 className="text-3xl font-bold text-gray-800 mb-2">
            Exercício de Interação
          </h1>
          <p className="text-gray-600">
            Pratique prompt, confirm e alert em JavaScript
          </p>
        </div>

        <div className="space-y-4">
          <Button
            onClick={handleStartInteraction}
            className="w-full bg-indigo-600 hover:bg-indigo-700 text-white py-3 rounded-lg font-semibold transition-colors"
          >
            Iniciar Interação
          </Button>

          {showWelcome && userName && (
            <div className="bg-green-50 border border-green-200 rounded-lg p-4 flex items-start gap-3">
              <CheckCircle className="w-5 h-5 text-green-600 flex-shrink-0 mt-0.5" />
              <div>
                <p className="font-semibold text-green-800">Sucesso!</p>
                <p className="text-green-700 text-sm">
                  Você completou o exercício com o nome: <strong>{userName}</strong>
                </p>
              </div>
            </div>
          )}
        </div>

        <div className="mt-8 pt-8 border-t border-gray-200">
          <h2 className="font-semibold text-gray-800 mb-3">Como funciona:</h2>
          <ol className="space-y-2 text-sm text-gray-600">
            <li className="flex gap-2">
              <span className="font-bold text-indigo-600">1.</span>
              <span>Um <code className="bg-gray-100 px-2 py-1 rounded">prompt</code> pedirá seu nome</span>
            </li>
            <li className="flex gap-2">
              <span className="font-bold text-indigo-600">2.</span>
              <span>Um <code className="bg-gray-100 px-2 py-1 rounded">confirm</code> perguntará se quer uma mensagem especial</span>
            </li>
            <li className="flex gap-2">
              <span className="font-bold text-indigo-600">3.</span>
              <span>Um <code className="bg-gray-100 px-2 py-1 rounded">alert</code> exibirá sua mensagem de boas-vindas</span>
            </li>
          </ol>
        </div>
      </div>
    </div>
  );
}
